<?xml version="1.0" encoding="UTF-8"?>

<!-- Based on work caravan Helijah hangar -->
<PropertyList>

  <particlesystem>
    <name>water</name>

    <texture>water.png</texture>

    <emissive> false     </emissive>
    <lighting> true   </lighting>

    <condition>
      <and>
        <greater-than>
          <property>velocities/groundspeed-kt</property>
          <value>4</value>
        </greater-than>
        <or>
          <property>gear/gear[0]/wow</property>
          <property>gear/gear[1]/wow</property>
        </or>
		<not-equals>
          <property>sim/crashed</property>
          <value>true</value>
        </not-equals>
      </and>
    </condition>


    <align>    billboard </align> 
    <attach>   world     </attach> 

    <placer>
      <type>    point     </type>
    </placer>

    <shooter>
      <theta-min-deg>  25.0 </theta-min-deg>
      <theta-max-deg> 40.0 </theta-max-deg>
      <phi-min-deg>   -1.5 </phi-min-deg>
      <phi-max-deg>    2.0 </phi-max-deg>
      <speed-mps>
        <value>  6.5 </value>
        <spread> 2.5 </spread>
      </speed-mps>
      <rotation-speed>
        <x-min-deg-sec>  3 </x-min-deg-sec>
        <y-min-deg-sec>  5 </y-min-deg-sec>
        <z-min-deg-sec>  2 </z-min-deg-sec>
        <x-max-deg-sec> 10 </x-max-deg-sec>
        <y-max-deg-sec> 60 </y-max-deg-sec>
        <z-max-deg-sec> 7 </z-max-deg-sec>
      </rotation-speed>
    </shooter>

    <counter>
      <particles-per-sec>
        <value>  40 </value>
        <spread>   2 </spread>
      </particles-per-sec>
    </counter>
   <particle>
      <start>
        <color>
          <red><value>   1.0 </value></red>
          <green><value> 1.0 </value></green>
          <blue><value>  1.0 </value></blue>
          <alpha><value> 0.16 </value></alpha>
        </color>
        <size>
          <value> 1 </value>
        </size>
      </start>
       <end>
        <color>
          <red><value>   0.80 </value></red>
          <green><value> 0.80 </value></green>
          <blue><value>  0.80 </value></blue>
          <alpha><value> 0.01 </value></alpha>
        </color>
        <size>
          <value> 5 </value>
        </size>
      </end>

      <life-sec>
        <value> 3 </value>
      </life-sec>
 

      <mass-kg> 10 </mass-kg>
      <radius-m>    5 </radius-m>

    </particle>
     
    <program>
      <fluid>   water  </fluid>   <!-- air / water -->
      <gravity> true  </gravity>
      <wind>    false </wind>
    </program>

  </particlesystem>

</PropertyList>

